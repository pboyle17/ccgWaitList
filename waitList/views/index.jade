
extends layout

block content
    h1= title
    hr
    .container.well Add new Player:
      form(action='/', method="post")
        input(id='name' autofocus type='text', name='name',  placeholder='Name')
        select(name='game')
          option 1/3 NLHE
          option 1/2/5 PLO
          option 1/1 NLHE
          option 2/5 NLHE
        input(class='btn-success' id='add' type='submit' value='add')

    .content
      h2#13NL 1/3 No Limit Holdem
      hr
      - var count = 0
      each player in players
        if player.game == '1/3 NLHE'
          -count++
          .container.well
            p= player.name
            button(type='button' class='delete btn-danger'  id='#{player.id}') Delete
      if count == 0
        p.well Open Seating

      h2#125PLO 1/2/5 Pot Limit Omaha
      hr
      - count = 0
      each player in players
        if player.game == '1/2/5 PLO'
          -count++
          .container.well
            p= player.name
            button(type='button' class='delete btn-danger'  id='#{player.id}') Delete
      if count == 0
        p.well Open Seating

      h2#11NL 1/1 No Limit Holdem
      hr
      - count = 0
      each player in players
        if player.game == '1/1 NLHE'
          -count++
          .container.well
            p= player.name
            button(type='button' class='delete btn-danger'  id='#{player.id}') Delete
      if count == 0
        p.well Open Seating
      .alert#message
    .footer
      button.btn-info.stop Stop Scroll
      button.btn-success.addPlayer Add Player
      button.btn-primary.resume Start Scroll
