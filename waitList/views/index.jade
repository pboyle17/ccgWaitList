extends layout

block content
  h1= title
  p Welcome to #{title}
  ul 1/3 No Limit Holdem
    each player in players
      if player.game
        li= player.name +':'+player.game+player.id
        button(type='button' class='delete'  id='#{player.id}') Delete #{player.name}

  ul Add new Player:
    form(action='/', method="post")
      input(type='text', name='name', placeholder='Name')
      input(type='text', name='game', placeholder='Game')
      input(id='add' type='submit' value='add')

      button(type='button' id='delete') delete
