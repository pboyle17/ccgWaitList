extends layout

block content
  h1= title
  p Welcome to #{title}
  ul 1/3 No Limit Holdem
    each player in players
      if player.game
        li= player.name +':'+player.game
        button(type='button' class='delete'  id='#{player.id}') Delete #{player.name}

  ul Add new Player:
    form(action='/', method="post")
      input(autofocus type='text', name='name', placeholder='Name')
      select(name='game')
        option 1/3 NLHE
        option 1/2/5 PLO
        option 1/1 NLHE
        option 2/5 NLHE
      input(id='add' type='submit' value='add')

  button(id='table') Create a New Table
